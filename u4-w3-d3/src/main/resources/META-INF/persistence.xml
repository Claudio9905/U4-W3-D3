<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="gestioneEventi2">
        <!-- Nella persistence unit andremo ad inserire l'entities che andremo a creare -->
        <class>claudiopostiglione.entities.Evento</class>
        <class>claudiopostiglione.entities.Location</class>
        <class>claudiopostiglione.entities.Partecipazione</class>
        <class>claudiopostiglione.entities.Persona</class>
        <class>claudiopostiglione.entities.PartitaDiCalcio</class>
        <class>claudiopostiglione.entities.GaraDiAtletica</class>
        <class>claudiopostiglione.entities.Concerto</class>
        <properties>
            <!-- Qui andremo ad inserire proprietÃ  che strutturano il file di configurazione specifico per il database utilizzato -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestioneEventi2"/>
            <!-- Dopo l'ultimo slash devo inserire il nome del database (QUESTO DEVE ESISTERE PERO') -->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- Quest'impostazione chiede a Hibernate di crearci le tabelle (se non esistono ancora) all' avvio dell'applicazione
                 oppure aggiornarle se necessario -->
        </properties>
    </persistence-unit>


</persistence>